<div class="container my-4">
  <h1>My Addresses</h1>
  
  <% if @addresses.empty? %>
    <div class="alert alert-info">
      You haven't added any addresses yet.
    </div>
  <% else %>
    <div class="row">
      <% @addresses.each do |address| %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Address</h5>
              <p class="card-text"><%= address.full_address %></p>
              <div class="d-flex">
                <%= link_to "Edit", edit_address_path(address), class: "btn btn-sm btn-outline-primary me-2" %>
                <%= button_to "Delete", address_path(address), method: :delete, class: "btn btn-sm btn-outline-danger", data: { confirm: "Are you sure you want to delete this address?", turbo: false } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  
  <div class="mt-4">
    <%= link_to "Add New Address", new_address_path, class: "btn btn-success" %>
    <%= link_to "Back to Profile", customer_path(current_user.customer), class: "btn btn-outline-secondary" %>
  </div>
</div>