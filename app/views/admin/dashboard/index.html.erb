<div class="container mt-4">
  <h1 class="mb-3">Admin Dashboard</h1>
  <p>Welcome, <%= current_user.username %>!</p>

  <div class="btn-group mb-3" role="group">
    <%= link_to "Manage Products", products_path, class: "btn btn-primary" %>
    <%= link_to "Manage Categories", categories_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Site Stats</h5>
      <p class="card-text">Number of Products: <strong><%= Product.count %></strong></p>
      <p class="card-text">Number of Categories: <strong><%= Category.count %></strong></p>
    </div>
  </div>
</div>
