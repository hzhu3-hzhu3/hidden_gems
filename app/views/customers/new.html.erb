<div class="container my-4">
  <h1>Create Customer Profile</h1>
  
  <%= form_with(model: @customer, local: true) do |form| %>
    <% if @customer.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer profile from being saved:</h2>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group mb-3">
      <%= form.label :full_name, "Full Name", class: "form-label" %>
      <%= form.text_field :full_name, class: "form-control" %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    
    <div class="form-group mb-3">
      <%= form.label :phone, "Phone", class: "form-label" %>
      <%= form.telephone_field :phone, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.submit "Create Customer Profile", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>