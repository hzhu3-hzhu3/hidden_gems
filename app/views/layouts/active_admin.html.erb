  <style>
    #header {
      background-color: #d791a3 !important;
      color: #fff !important;
      padding: 1rem !important;
    }
    
    #header h1.site_title {
      color: #fff !important;
    }
    
    .button, .action_item a, input[type="submit"] {
      background-color: #d791a3 !important;
      color: white !important;
    }
  </style>

  <%= javascript_importmap_tags %>
  <%= javascript_include_tag "active_admin" %>
