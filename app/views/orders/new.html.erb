<div class="container my-4">
  <h1>Checkout</h1>
  
  <%= form_with(url: orders_path, method: :post, local: true) do |form| %>
    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Order Summary</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <% @items.each do |item| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if item[:product].photo.attached? %>
                            <%= image_tag item[:product].photo.variant(:thumb), style: "max-width: 50px; max-height: 50px; margin-right: 10px;" %>
                          <% end %>
                          <div>
                            <%= item[:product].name %>
                          </div>
                        </div>
                      </td>
                      <td>$<%= sprintf("%.2f", item[:price]) %></td>
                      <td><%= item[:quantity] %></td>
                      <td>$<%= sprintf("%.2f", item[:subtotal]) %></td>
                    </tr>
                  <% end %>
                </tbody>
                <tfoot>
                  <tr>
                    <th colspan="3" class="text-end">Subtotal:</th>
                    <th>$<%= sprintf("%.2f", @subtotal) %></th>
                  </tr>
                  <tr>
                    <th colspan="3" class="text-end">GST (<%= (@gst_rate * 100).round(2) %>%):</th>
                    <th>$<%= sprintf("%.2f", @gst_total) %></th>
                  </tr>
                  <tr>
                    <th colspan="3" class="text-end">PST (<%= (@pst_rate * 100).round(2) %>%):</th>
                    <th>$<%= sprintf("%.2f", @pst_total) %></th>
                  </tr>
                  <tr class="table-active">
                    <th colspan="3" class="text-end">Total:</th>
                    <th>$<%= sprintf("%.2f", @total) %></th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Shipping Information</h5>
          </div>
          <div class="card-body">
            <% if current_user.customer.addresses.any? %>
              <div class="mb-3">
                <label class="form-label">Select an existing address:</label>
                <select name="address[id]" id="address-select" class="form-select">
                  <option value="">-- Select an address --</option>
                  <% current_user.customer.addresses.each do |address| %>
                    <option value="<%= address.id %>" 
                            data-province="<%= address.province %>"
                            <%= 'selected' if address == @address && @address.persisted? %>>
                      <%= address.full_address %>
                    </option>
                  <% end %>
                </select>
              </div>
              <div class="mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="use-new-address">
                  <label class="form-check-label" for="use-new-address">
                    Use a new address
                  </label>
                </div>
              </div>
            <% end %>
            
            <div id="new-address-form" <%= 'style="display:none;"' if current_user.customer.addresses.any? %>>
              <div class="mb-3">
                <label for="address-street" class="form-label">Street Address</label>
                <input type="text" class="form-control" id="address-street" name="address[street]" value="<%= @address.street if @address && !@address.persisted? %>">
              </div>
              <div class="mb-3">
                <label for="address-city" class="form-label">City</label>
                <input type="text" class="form-control" id="address-city" name="address[city]" value="<%= @address.city if @address && !@address.persisted? %>">
              </div>
              <div class="mb-3">
                <label for="address-province" class="form-label">Province</label>
                <select class="form-select" id="address-province" name="address[province]">
                  <% @provinces.each do |province| %>
                    <option value="<%= province[:name] %>" 
                            data-gst="<%= province[:gst] %>" 
                            data-pst="<%= province[:pst] %>">
                      <%= province[:name] %> (GST: <%= province[:gst] %>%, PST: <%= province[:pst] %>%)
                    </option>
                  <% end %>
                </select>
              </div>
              <div class="mb-3">
                <label for="address-postal" class="form-label">Postal Code</label>
                <input type="text" class="form-control" id="address-postal" name="address[postal_code]" value="<%= @address.postal_code if @address && !@address.persisted? %>">
              </div>
            </div>
          </div>
        </div>
        
        <div class="card">
          <div class="card-body">
            <button type="submit" class="btn btn-primary w-100 mb-2">Place Order</button>
            <%= link_to "Return to Cart", cart_show_path, class: "btn btn-outline-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const useNewAddressCheckbox = document.getElementById('use-new-address');
    const addressSelect = document.getElementById('address-select');
    const newAddressForm = document.getElementById('new-address-form');
    
    if (useNewAddressCheckbox) {
      useNewAddressCheckbox.addEventListener('change', function() {
        if (this.checked) {
          addressSelect.value = '';
          addressSelect.disabled = true;
          newAddressForm.style.display = 'block';
        } else {
          addressSelect.disabled = false;
          newAddressForm.style.display = 'none';
        }
      });
    }
    

    const provinceSelect = document.getElementById('address-province');
    if (provinceSelect) {
      provinceSelect.addEventListener('change', function() {
        const currentUrl = window.location.href;
        const separator = currentUrl.includes('?') ? '&' : '?';
        window.location.href = `${currentUrl}${separator}province=${this.value}`;
      });
    }
    
    if (addressSelect) {
      addressSelect.addEventListener('change', function() {
        if (this.value) {
          const currentUrl = window.location.href;
          const separator = currentUrl.includes('?') ? '&' : '?';
          window.location.href = `${currentUrl}${separator}address_id=${this.value}`;
        }
      });
    }
  });
</script>