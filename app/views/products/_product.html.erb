<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

    <% if product.photo.attached? %>
      <p><strong>Photo:</strong></p>
      <%= image_tag product.photo.variant(resize_to_limit: [400, 400]) %>
    <% else %>
      <p>No photo uploaded</p>
    <% end %>


</div>
