<% content_for :title, @product.name %>

<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      <% if @product.photo.attached? %>
        <%= image_tag @product.photo, class: "img-fluid" %>
      <% else %>
        <div class="bg-secondary text-white text-center py-5">
          No Image
        </div>
      <% end %>
    </div>

    <div class="col-md-6">
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
      <p><strong>Price:</strong> $<%= @product.current_price %></p>

      <% if current_admin_user || (current_user && current_user.admin?) %>
        <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning" %>
        <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: "Are you sure?", turbo: "false" }, class: "btn btn-danger" %>
      <% end %>

      <%= link_to "Back to products", products_path, class: "btn btn-outline-primary" %>
      <%= link_to "Add to Cart", add_to_cart_path(@product), method: :post, class: "btn btn-success" %>
    </div>
  </div>
</div>
